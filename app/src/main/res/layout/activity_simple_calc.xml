<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SimpleCalc"

    >


    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView"

        >

        <Button
            android:id="@+id/ACbutton"
            style="@style/topButtonsStyle"
            android:onClick="ACClick"
            android:text="AC"
            android:background="@drawable/roundedbutton"

            />

        <Button
            android:id="@+id/changeSingButton"
            style="@style/topButtonsStyle"
            android:text="+/-"
            android:onClick="changeSignClick"
            />

        <Button
            android:id="@+id/percentButton"
            style="@style/topButtonsStyle"
            android:text="%"
            android:onClick="percentClick"

            />

        <Button
            android:id="@+id/divButton"
            style="@style/actionButtonsStyle"
            android:text="/"
            android:onClick="divClick"

            />

        <Button
            android:id="@+id/button7"
            style="@style/numberButtonsStyle"
            android:text="7"
            android:onClick="button7Click"

            />

        <Button
            android:id="@+id/button8"
            style="@style/numberButtonsStyle"
            android:text="8"
            android:onClick="button8Click"
            />

        <Button
            android:id="@+id/button9"
            style="@style/numberButtonsStyle"
            android:text="9"
            android:onClick="button9Click"

            />

        <Button
            android:id="@+id/mulButton"
            style="@style/actionButtonsStyle"
            android:text="x"
            android:onClick="mulClick"

            />

        <Button
            android:id="@+id/button4"
            style="@style/numberButtonsStyle"
            android:text="4"
            android:onClick="button4Click"

            />

        <Button
            android:id="@+id/button5"
            style="@style/numberButtonsStyle"
            android:text="5"
            android:onClick="button5Click"

            />

        <Button
            android:id="@+id/button6"
            style="@style/numberButtonsStyle"
            android:text="6"
            android:onClick="button6Click"

            />

        <Button
            android:id="@+id/minusButton"
            style="@style/actionButtonsStyle"
            android:text="-"
            android:onClick="minusClick"

            />

        <Button
            android:id="@+id/button1"
            style="@style/numberButtonsStyle"
            android:text="1"
            android:onClick="button1Click"

            />

        <Button
            android:id="@+id/button2"
            style="@style/numberButtonsStyle"
            android:text="2"
            android:onClick="button2Click"

            />

        <Button
            android:id="@+id/button3"
            style="@style/numberButtonsStyle"
            android:text="3"
            android:onClick="button3Click"

            />

        <Button
            android:id="@+id/plusButton"
            style="@style/actionButtonsStyle"
            android:text="+"
            android:onClick="plusClick"

            />

        <Button
            android:id="@+id/button0"
            style="@style/numberButtonsStyle"
            android:layout_columnSpan="2"
            android:text="0"
            android:onClick="button0Click"

            />

        <Button
            android:id="@+id/comaButton"
            style="@style/numberButtonsStyle"
            android:text=","
            android:onClick="comaClick"

            />

        <Button
            android:id="@+id/equalsButton"
            style="@style/actionButtonsStyle"
            android:text="="
            android:onClick="equalsClick"

            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
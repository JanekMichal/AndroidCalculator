<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#2b2d42"
    
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:layout_marginTop="300dp"
        android:id="@+id/appName"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/simpleCalcBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Simple Calculator"
        android:layout_below="@+id/appName"
        android:textSize="30sp"
        android:onClick="simpleCalcClick"
        android:backgroundTint="@color/orange"
        
        />

    <Button
        android:id="@+id/advancedCalcBtn"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleCalcBtn"
        android:layout_centerHorizontal="true"
        android:text="Advanced Calculator"
        android:onClick="advancedCalcClick"
        android:backgroundTint="@color/orange"
        android:textSize="30sp"

        />

    <Button
        android:id="@+id/aboutBtn"
android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advancedCalcBtn"
        android:layout_centerHorizontal="true"
        android:text="About"
        android:onClick="aboutCalcClick"
        android:backgroundTint="@color/orange"
        android:textSize="30sp"


        />

    <Button
        android:id="@+id/ExitBtn"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutBtn"
        android:layout_centerHorizontal="true"
        android:text="Exit"
        android:onClick="exitClick"
        android:backgroundTint="@color/orange"
        android:textSize="30sp"
        />

</RelativeLayout>
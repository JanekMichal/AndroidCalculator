<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SimpleCalc"

    >

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/black"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="48dp"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:columnCount="5"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView"

        >

        <Button
            android:id="@+id/button7"
            style="@style/numberButtonsStyle"
            android:onClick="button7Click"
            android:text="7"

            />

        <Button
            android:id="@+id/button8"
            style="@style/numberButtonsStyle"
            android:onClick="button8Click"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/numberButtonsStyle"
            android:onClick="button9Click"
            android:text="9"

            />

        <Button
            android:id="@+id/divButton"
            style="@style/actionButtonsStyle"
            android:onClick="divClick"
            android:text="/"

            />

        <Button
            android:id="@+id/ACbutton"
            style="@style/topButtonsStyle"
            android:onClick="ACClick"
            android:text="AC"

            />


        <Button
            android:id="@+id/button4"
            style="@style/numberButtonsStyle"
            android:onClick="button4Click"
            android:text="4"

            />

        <Button
            android:id="@+id/button5"
            style="@style/numberButtonsStyle"
            android:onClick="button5Click"
            android:text="5"

            />

        <Button
            android:id="@+id/button6"
            style="@style/numberButtonsStyle"
            android:onClick="button6Click"
            android:text="6"

            />

        <Button
            android:id="@+id/mulButton"
            style="@style/actionButtonsStyle"
            android:onClick="mulClick"
            android:text="x"

            />

        <Button
            android:id="@+id/percentButton"
            style="@style/topButtonsStyle"
            android:onClick="delClick"
            android:text="DEL"

            />

        <Button
            android:id="@+id/button1"
            style="@style/numberButtonsStyle"
            android:onClick="button1Click"
            android:text="1"

            />

        <Button
            android:id="@+id/button2"
            style="@style/numberButtonsStyle"
            android:onClick="button2Click"
            android:text="2"

            />

        <Button
            android:id="@+id/button3"
            style="@style/numberButtonsStyle"
            android:onClick="button3Click"
            android:text="3"

            />

        <Button
            android:id="@+id/minusButton"
            style="@style/actionButtonsStyle"
            android:onClick="minusClick"
            android:text="-"

            />

        <Button
            android:id="@+id/changeSingButton"
            style="@style/topButtonsStyle"
            android:onClick="changeSignClick"
            android:text="+/-" />


        <Button
            android:id="@+id/button0"
            style="@style/numberButtonsStyle"
            android:layout_columnSpan="2"
            android:onClick="button0Click"
            android:text="0"

            />

        <Button
            android:id="@+id/comaButton"
            style="@style/numberButtonsStyle"
            android:onClick="comaClick"
            android:text=","

            />

        <Button
            android:id="@+id/plusButton"
            style="@style/actionButtonsStyle"
            android:onClick="plusClick"
            android:text="+"

            />

        <Button
            android:id="@+id/equalsButton"
            style="@style/actionButtonsStyle"
            android:onClick="equalsClick"
            android:text="="

            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>